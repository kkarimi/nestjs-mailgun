{
  "name": "@kkarimi/nestjs-mailgun",
  "version": "1.1.4",
  "description": "NestJS provider for sending emails with mailgun",
  "author": "Nima Karimi <nima@karimi.info>",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "start:dev": "tsc -w",
    "build": "tsc --skipLibCheck",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [
    "nestjs",
    "mailgun",
    "emails"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kkarimi/nestjs-mailgun"
  },
  "bugs": {
    "url": "https://github.com/kkarimi/nestjs-mailgun"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.0"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "mailgun.js": "^3.7.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0"
  },
  "devDependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.1.0",
    "@nestjs/core": "^8.0.2",
    "@nestjs/platform-express": "^8.0.2",
    "@nestjs/testing": "8.0.2",
    "@types/express": "4.17.3",
    "@types/jest": "^27.0.2",
    "@types/node": "13.9.5",
    "@types/supertest": "2.0.8",
    "jest": "^27.3.1",
    "prettier": "2.0.2",
    "supertest": "4.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "8.8.1",
    "tsc-watch": "4.2.3",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.1.0",
    "typescript": "^3.9.10"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "homepage": "https://github.com/kkarimi/nestjs-mailgun#readme"
}
